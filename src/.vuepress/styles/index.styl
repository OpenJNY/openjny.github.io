body
  font-family "Mplus 1p", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif

.content
  a.header-anchor
    transition all 0.05s

// ::: VUE
pre.vue-container
  border-left-width: .5rem;
  border-left-style: solid;
  border-color: #42b983;
  border-radius: 0px;
  padding-top: 0;
  padding-bottom: 0;
  & > code
    font-size: 14px !important;
    & > p
      margin: -5px 0 -20px 0;
    code
      background-color: #42b983 !important;
      padding: 3px 5px;
      border-radius: 3px;
      color #000
    em
      color #808080
      font-weight light

// Customized container
.custom-block
  // common
  &.tip, &.warning, &.danger, &.reference, &.toc
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.reference
    border-color #e4e5e7
    background-color #f7f8fa
  &.toc
    background-color #f7f8fa

.post-content
  p
    margin: 1.5rem 0
    &:first-child
      margin-top: 1rem
    &:last-child
      margin-bottom: 1rem
  h1, h2, h3, h4, h5, h6
    margin-top (0.5rem - $navbarHeight)
    padding-top (0.5rem + $navbarHeight)
  h1
    font-size 1.6rem
    color $textColor
  h2
    font-size 1.6rem
    color $accentColor
    padding-bottom: 0.3em;
    margin-bottom: 0.5em;
    border-bottom: 1px solid $accentColor;
  h3
    font-size 1.4rem
    padding-bottom: 0.3em;
    margin-bottom: 0.5em;
    border-bottom: 1px solid #eaecef;
  h4, h5, h6
    font-size 1.3rem